<%= form_for order, url: potepan_cart_path do |order_form| %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>商品名</th>
          <th>価格</th>
          <th>数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'line_item', collection: order.line_items, locals: { order_form: order_form } %>
      </tbody>
    </table>
  </div>
  <div class="updateArea">
   <!--  <div class="input-group">
      <input type="text" class="form-control" placeholder="I have a discount coupon" aria-describedby="basic-addon2">
      <a href="#" class="btn input-group-addon" id="basic-addon2">apply coupon</a>
    </div> -->
    <%= button_tag "アップデート", name: :update, class: 'btn' %>
  </div>
  <div class="row totalAmountArea">
    <div class="col-sm-4 col-sm-offset-8 col-xs-12">
      <ul class="list-unstyled">
        <li>小計 <span><%= order.display_item_total %></span></li>
        <li>消費税 <span><%= order.display_additional_tax_total %></span></li>
        <li>総計 <span class="grandTotal"><%= order.display_total %></span></li>
      </ul>
    </div>
  </div>
  <div class="checkBtnArea">
    <%= button_tag name: :checkout, class: 'btn btn-primary btn-block' do %>
      購入する<i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
    <% end %>
  </div>
<% end %>
