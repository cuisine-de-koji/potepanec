<!-- LIGHT SECTION -->
<section class="lightSection clearfix pageHeader">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="page-title">
          <h2>
            <%= page[:name] || page.name %>
              <% if page[:filter_name] %>
                <span style="margin-left: 8px;"><%= page[:filter_name] %></span>
              <% end %>
          </h2>
        </div>
      </div>
      <div class="col-xs-6">
        <ol class="breadcrumb pull-right">
          <li><%= link_to 'Home', potepan_path %></li>
          <li><%= link_to 'Categories', potepan_category_path(Spree::Taxon.first.id) %></li>
          <li class="active"><%= page[:name] || page.name %></li>
        </ol>
      </div>
    </div>
  </div>
</section>
